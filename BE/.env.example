# Server Configuration
PORT=3000
NODE_ENV=development

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=Qwen/Qwen2.5-72B-Instruct
# Hugging Face Router endpoint (OpenAI-compatible)
HUGGINGFACE_API_URL=https://router.huggingface.co/v1/chat/completions

# Cloudinary Configuration (for PDF upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# RAG Configuration (Optional)
RAG_CHUNK_SIZE=1000          # Kích thước mỗi chunk text (chars)
RAG_CHUNK_OVERLAP=100        # Độ overlap giữa các chunks (chars)
RAG_RETRIEVAL_K=4            # Số lượng chunks liên quan cần retrieve
RAG_MAX_FILE_SIZE=10485760   # Max file size (bytes) - mặc định 10MB
